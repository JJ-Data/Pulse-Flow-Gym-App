enum SubscriptionStatus {
  ACTIVE
  EXPIRED
  PENDING
}

enum Intensity {
  LOW
  MEDIUM
  HIGH
}

enum BookingStatus {
  CONFIRMED
  CANCELLED
  WAITLIST
}
